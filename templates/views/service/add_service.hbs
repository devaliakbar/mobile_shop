<div class="header">
    <h1>Add New Service</h1>
    <div class="breadcrumb">
        <a onclick="showHome()" href="javaScrt:void();"><i class="fas fa-home"></i></a>
    </div>
    <div class="bottom-header">
    </div>
</div>

<div class="content">
    <div class="modal">
        <div class="row">

            <div class="form-group mb-3 col-md-3">
                <input id="name" type="text" placeholder="Name">
            </div>

            <div class="form-group mb-3 col-md-3">
                <input id="date" type="text" placeholder="Mobile">
            </div>

            <div class="form-group mb-3 col-md-3">
                <input id="date" type="text" placeholder="Job No">
            </div>

            <div class="form-group mb-3 col-md-3 ">
                <input id="date" type="text" placeholder="Make">
            </div>
            <div class="form-group mb-3 col-md-3 ">
                <input id="date" type="text" placeholder="Model">
            </div>
            <div class="form-group mb-3 col-md-3 ">
                <input id="date" type="text" placeholder="IMEI No">
            </div>

            <div class="form-group radio-inline  mb-3 col-md-3">
                <label for="method">Return Entry</label>
                <label for="cash" class="custom-radio">Yes <input name="method" id="cash" type="radio"><span
                        class="checkmark ml-2"></span></label>
                <label for="card" class="custom-radio">No <input name="method" id="card" type="radio"><span
                        class="checkmark ml-2"></label>
            </div>

            <div class="form-group radio-inline col-auto mb-3 col-md-3">
                <label for="ano">Check Another Complaint</label>
                <label for="y" class="custom-radio">Yes <input name="ano" id="y" type="radio"><span
                        class="checkmark ml-2"></label>
                <label for="n" class="custom-radio">No <input name="ano" id="n" type="radio"><span
                        class="checkmark ml-2"></label>
            </div>
            <div class="form-group mb-3 col-md-4 ">
                <textarea name="" id="" cols="30" rows="10" placeholder="Complaints"></textarea>
            </div>
            <div class="form-group mb-3 col-md-4 ">
                <textarea name="" id="" cols="30" rows="10" placeholder="Remarks"></textarea>
            </div>

            <div class="form-group mb-3 col-md-4 ml-auto align-self-center">
                <label class="custom-checkbox mb-0" for="mem">Quick Service
                    <input id="mem" type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>

            <div class="form-group col-12 mb-3 mt-2 d-flex align-items-center">
                <h4>Accessories Collected</h4>
            </div>

            <div class="col-12 accessories-group mb-5">

                <div class="row">
                    <div class="form-group col-auto">
                        <label class="custom-checkbox mb-0" for="mem">Memmory Card
                            <input id="mem" type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <div class="form-group col-auto">
                        <label class="custom-checkbox mb-0" for="sim">Sim
                            <input id="sim" type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </div>

                    <div class="form-group col-auto">
                        <label class="custom-checkbox mb-0" for="bat">Battery
                            <input id="bat" type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <div class="form-group col-auto">
                        <label class="custom-checkbox mb-0" for="cha">Charger
                            <input id="cha" type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3 col-md-3 ">
                <input id="inv_no" type="text" placeholder="Estimate Amount">
            </div>

            <div class="form-group mb-3 col-md-3 ">
                <input id="inv_no" type="text" placeholder="Advance">
            </div>

            <div class="form-group mb-3 col-md-3 form-group-inline">
                <label for="a_name">Est Delivery Date : </label>
                <input id="a_name" type="date">
            </div>

            <div class="form-group col-md-3 form-group-inline ml-auto bill-actions">
                <button class="btn-primary mr-2">Modify</button>
                <button class="btn-dark"> Print </button>
            </div>

        </div>
    </div>
</div>
<script src="js/service/add_service.js"></script>